---
import DefaultPageLayout from '$/layouts/default.astro'
import MediaPreviewList from '$/components/MediaPreviewList.astro'
// import posts from '$/data/astro-media.json'

let title = 'Videos & Screencasts';
let description = 'All the great videos / videos / podcasts we make'

const response = await fetch('https://raw.githubusercontent.com/talmax1124/astro-ink/main/src/data/astro-media.json')
const allPosts = await response.json()
const sortedPosts = allPosts.sort((a, b) => new Date(b.date) - new Date(a.date))
---
<DefaultPageLayout content={{ title, description }}>
    <MediaPreviewList posts={sortedPosts} />
</DefaultPageLayout>
